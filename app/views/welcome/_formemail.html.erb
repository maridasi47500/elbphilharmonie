                </div>
                <div class="<%=!user.errors[:email].blank? ? "validation-error ng-binding" : "nghide"%>" ng-show="submitted &amp;&amp; serverError == 'EMAIL_UNCHANGED'">
                    Please enter a new email address.
                    <br><br>
                </div>
                <div class="<%=!user.errors[:email].blank? ? "validation-error ng-binding" : "nghide"%>" ng-show="submitted &amp;&amp; serverError == 'UNKNOWN_ERROR'">
