<div class="future-status status-box">
	
		
			<span class="status">
				
					Online ticket sale
				
			</span>
			<span class="status status-sub">
				<%=status.status_sub.split("\n")[0]%>
			</span>
			



	<a class="link link-ticket button large hide" href="<%=buyticket_path(id: status.event_id, title: status.event.title.parameterize)%>">

		<!--  --><span>Tickets <span class="price-from">from €</span></span><span class="price-from"><span><%=status.event.price.split(' | ')[0].to_f.round(2)%></span></span>

	</a>

		
		
				
					
						

<span class="prices"><span>€</span><%=status.event.price.split(' | ').map{|x|"<span>#{x}</span>"}.join(' | ').html_safe%>
</span>

					
				
			
		
	<%status.status_sub.split("\n")[1..-1].each do |s|%>
	
		<span class="status status-sub">
			<%=s%>
		</span>
    <%end%>
	
</div>
