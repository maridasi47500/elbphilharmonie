<aside class="grid-container event-media">
	<div class="grid-x grid-margin-x align-center">
		<div class="cell has-background">
			<figure class="video-module has-dark-gradient">
				
					<a class="open-media-overlay" href="<%=video.overlay%>" data-lightbox="">
				
						<picture>
							<img src="<%=video.image%>" title="<%=video.caption%>" alt="<%=video.caption%>">
						</picture>
				
					</a>
				

				<div class="grid-container section-container text-container">
					<div class="grid-x grid-margin-x align-center align-middle">
						<div class="cell medium-5 ">
							
						</div>
						<div class="cell medium-5"></div>
					</div>
				</div>

				
					<span class="image-caption"><%=video.caption%></span>
				
			</figure>
		</div>
	</div>
</aside>
